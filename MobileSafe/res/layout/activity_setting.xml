<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.itheima.mobilesafe.view.SettingItemView
        xmlns:mobilsafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilsafe:desoff="自动更新已关闭"
        mobilsafe:deson="自动更新已开启"
        mobilsafe:destitle="自动更新设置" >
    </com.itheima.mobilesafe.view.SettingItemView>

    <com.itheima.mobilesafe.view.SettingItemView
        xmlns:mobilsafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilsafe:desoff="归属地的显示已关闭"
        mobilsafe:deson="归属地的显示已开启"
        mobilsafe:destitle="电话归属地的显示设置" >
    </com.itheima.mobilesafe.view.SettingItemView>

    <com.itheima.mobilesafe.view.SettingClickView
        android:id="@+id/scv_toast_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.itheima.mobilesafe.view.SettingClickView>

    <com.itheima.mobilesafe.view.SettingClickView
        android:id="@+id/scv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.itheima.mobilesafe.view.SettingClickView>

    <com.itheima.mobilesafe.view.SettingItemView
        xmlns:mobilsafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
        android:id="@+id/siv_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilsafe:desoff="黑名单拦截已关闭"
        mobilsafe:deson="黑名单拦截已开启"
        mobilsafe:destitle="黑名单拦截设置设置" >
    </com.itheima.mobilesafe.view.SettingItemView>
	 <com.itheima.mobilesafe.view.SettingItemView
        xmlns:mobilsafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
        android:id="@+id/siv_app_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilsafe:desoff="程序锁已关闭"
        mobilsafe:deson="程序锁已开启"
        mobilsafe:destitle="程序锁设置" >
    </com.itheima.mobilesafe.view.SettingItemView>
</LinearLayout>